<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<GridPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml"
          prefWidth="375" prefHeight="325" alignment="center" hgap="10" vgap="10">

    <Text text="Simple Form"  style="-fx-font: bold 23.0 Helvetica"
          GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.valignment="CENTER"
          GridPane.halignment="CENTER" GridPane.fillWidth="true">
    </Text>

    <Text fx:id="instruction" style="-fx-font: bold 20.0 Helvetica"
          GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.valignment="CENTER"
          GridPane.halignment="CENTER" GridPane.fillWidth="true">
    </Text>

    <TextField fx:id="textFieldInput" onAction="#handleNextButton" prefWidth="250"
               GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.valignment="CENTER">
    </TextField>

    <Button fx:id="backButton" onAction="#handleBackButton" text="Back" prefWidth="50"
            GridPane.rowIndex="4" GridPane.columnIndex="0">
    </Button>

    <Button fx:id="nextButton" onAction="#handleNextButton" text="Next" prefWidth="50"
            GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="RIGHT">
    </Button>

</GridPane>